{
  "window.menuBarVisibility": "toggle",
  "workbench.statusBar.visible": false,
  "workbench.startupEditor": "none",
  "editor.fontFamily": "'Fira Code', 'Menlo', 'Droid Sans Mono', 'monospace', monospace",
  "editor.fontSize": 14,
  "editor.rulers": [80],
  "editor.fontWeight": 525,
  "editor.fontLigatures": true,
  "editor.fontVariations": false,
  "breadcrumbs.enabled": false,
  "workbench.editor.showTabs": "none",
  "security.workspace.trust.untrustedFiles": "open",
  // Vim configuration
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.insertModeKeyBindings": [],
  "vim.smartRelativeLine": true,
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<C-l>"],
      "after": ["w"]
    },
    {
      "before": ["<C-h>"],
      "after": ["b"]
    },
    {
      "before": ["<C-k>"],
      "after": ["4", "k"]
    },
    {
      "before": ["<C-j>"],
      "after": ["4", "j"]
    },
    {
      "before": ["<leader>", "r", "n"],
      "after": [],
      "commands": [
        {
          "command": "editor.action.rename",
          "args": []
        }
      ]
    },
    {
      "before": ["<leader>", "d", "f"],
      "after": [],
      "commands": [
        {
          "command": "editor.action.showDefinitionPreviewHover",
          "args": []
        }
      ]
    },
    {
      "before": ["<leader>", "g", "d"],
      "after": [],
      "commands": [
        {
          "command": "editor.action.peekTypeDefinition",
          "args": []
        }
      ]
    },
    {
      "before": ["<leader>", "g", "i"],
      "after": [],
      "commands": [
        {
          "command": "editor.action.revealDefinition",
          "args": []
        }
      ]
    },
    {
      "before": ["<leader>", "n", "f"],
      "after": [],
      "commands": [
        {
          "command": "workbench.files.action.focusFilesExplorer",
          "args": []
        }
      ]
    },
    {
      "before": ["<leader>", "f", "w"],
      "after": [],
      "commands": ["references-view.findReferences"]
    },
    {
      "before": ["<leader>", "f", "r"],
      "after": [],
      "commands": ["workbench.action.findInFiles"]
    },
    {
      "before": ["<leader>", "f", "w"],
      "after": [],
      "commands": ["references-view.findReferences"]
    },
    {
      "before": ["<leader>", "r", "u"],
      "after": [],
      "commands": ["typescript.removeUnusedImports"]
    },
    {
      "before": ["<leader>", "q"],
      "after": [],
      "commands": ["workbench.action.closeEditorsInGroup"]
    },
    {
      "before": ["<leader>", "i", "p"],
      "after": ["w"],
      "commands": ["editor.action.triggerSuggest"]
    },
    {
      "before": ["<leader>", "e", "n"],
      "commands": [
        {
          "command": "editor.action.marker.next",
          "when": "editorFocus"
        }
      ]
    },
    {
      "before": ["<leader>", "a", "i", "p"],
      "after": [],
      "commands": [
        {
          "command": "editor.action.sourceAction",
          "args": {
            "kind": "source.addMissingImports",
            "apply": "first"
          }
        }
      ]
    },
    {
      "before": ["<leader>", "c", "s"],
      "commands": [
        {
          "command": "workbench.action.toggleSidebarVisibility"
        }
      ]
    },
    {
      "before": ["<leader>", "g", "b"],
      "commands": ["git.checkout"]
    },
    {
      "before": ["<leader>", "n", "s"],
      "commands": ["workbench.scm.focus"]
    },
    {
      "before": ["<leader>", "c", "c"],
      "commands": ["editor.action.showOrFocusStandaloneColorPicker"]
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": ["<C-l>"],
      "after": ["w"]
    },
    {
      "before": ["<C-h>"],
      "after": ["b"]
    },
    {
      "before": ["<C-k>"],
      "after": ["4", "k"]
    },
    {
      "before": ["<C-j>"],
      "after": ["4", "j"]
    }
  ],
  "vim.leader": ",",
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false,
    "<C-b>": false,
    "<Alt-a>": false,
    "<C-a><C-w>": false
  },
  "[html]": {
    "editor.defaultFormatter": "mblode.twig-language"
  },
  "explorer.confirmDelete": false,
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.formatOnSave": true,
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "git.enableSmartCommit": true,
  "codesnap.transparentBackground": true,
  "codesnap.boxShadow": "rgba(0, 0, 0, 0.55) 0px 0px 12px",
  "cSpell.language": "en,fr",
  "cSpell.enabled": false,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "git.confirmSync": false,
  "githubPullRequests.remotes": ["origin", "upstream", "gitorigin"],
  "github.gitAuthentication": true,
  "githubPullRequests.logLevel": "debug",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontFamily": "FiraCode Nerd Font",
  "terminal.integrated.fontWeight": 500,
  "terminal.integrated.lineHeight": 1,
  "terminal.integrated.shellIntegration.enabled": true,
  "terminal.external.linuxExec": "zsh",
  "terminal.external.osxExec": "zsh",
  "workbench.iconTheme": "material-icon-theme",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "explorer.confirmDragAndDrop": false,
  "window.commandCenter": false,
  "editor.inlayHints.padding": true,
  "javascript.inlayHints.parameterNames.enabled": "all",
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "typescript.inlayHints.parameterNames.suppressWhenArgumentMatchesName": false,
  "workbench.activityBar.location": "hidden",
  "terminal.integrated.minimumContrastRatio": 1,
  "rust-analyzer.lens.debug.enable": false,
  "rust-analyzer.lens.enable": false,
  "editor.codeLens": false,
  "rust-analyzer.inlayHints.closingBraceHints.enable": false,
  "rust-analyzer.inlayHints.renderColons": false,
  "rust-analyzer.inlayHints.typeHints.enable": false,
  "rust-analyzer.inlayHints.chainingHints.enable": false,
  "rust-analyzer.inlayHints.closureStyle": "hide",
  "rust-analyzer.inlayHints.parameterHints.enable": false,
  "zenMode.showTabs": "none",
  "zenMode.hideLineNumbers": true,
  "vscode_vibrancy.opacity": 0,
  "vscode_vibrancy.theme": "Custom theme (use imports)",
  "vscode_vibrancy.imports": ["/Users/djeg/.config/custom-theme.css"],
  "window.zoomLevel": 2,
  "terminal.integrated.gpuAcceleration": "off",
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit",
    "source.fixAll": "explicit",
    "source.removeUnusedImports": "explicit"
  },
  "workbench.colorTheme": "Theme Flat",
  "workbench.colorCustomizations": {
    "terminal.background": "#00000000"
  },
  "workbench.settings.applyToAllProfiles": ["workbench.colorCustomizations"],
  "editor.columnSelection": false,
  "editor.minimap.enabled": false,
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
