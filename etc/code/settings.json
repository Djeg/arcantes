{
  "window.menuBarVisibility": "toggle",
  "workbench.colorTheme": "Monokai Pro (Filter Machine)",
  "workbench.startupEditor": "none",
  "editor.fontFamily": "'FiraCode Nerd Font', 'Menlo', 'Droid Sans Mono', 'monospace', monospace",
  "editor.fontSize": 16,
  "breadcrumbs.enabled": false,
  "workbench.editor.showTabs": false,
  "security.workspace.trust.untrustedFiles": "open",
  "editor.minimap.enabled": false,
  // Vim configuration
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.insertModeKeyBindings": [],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<C-l>"],
      "after": ["w"]
    },
    {
      "before": ["<C-h>"],
      "after": ["b"]
    },
    {
      "before": ["<C-k>"],
      "after": ["4", "k"]
    },
    {
      "before": ["<C-j>"],
      "after": ["4", "j"]
    },
    {
      "before": ["<leader>", "r", "n"],
      "after": [],
      "commands": [
        {
          "command": "editor.action.rename",
          "args": []
        }
      ]
    },
    {
      "before": ["<leader>", "d", "f"],
      "after": [],
      "commands": [
        {
          "command": "editor.action.showDefinitionPreviewHover",
          "args": []
        }
      ]
    },
    {
      "before": ["<leader>", "g", "d"],
      "after": [],
      "commands": [
        {
          "command": "editor.action.peekTypeDefinition",
          "args": []
        }
      ]
    },
    {
      "before": ["<leader>", "g", "i"],
      "after": [],
      "commands": [
        {
          "command": "editor.action.revealDefinition",
          "args": []
        }
      ]
    },
    {
      "before": ["<leader>", "n", "f"],
      "after": [],
      "commands": [
        {
          "command": "workbench.files.action.focusFilesExplorer",
          "args": []
        }
      ]
    },
    {
      "before": ["<leader>", "f"],
      "after": [],
      "commands": [
        {
          "command": "filesExplorer.findInFolder",
          "args": []
        }
      ]
    },
    {
      "before": ["<leader>", "r", "u"],
      "after": [],
      "commands": [
        {
          "command": "typescript.removeUnusedImports",
          "args": []
        }
      ]
    },
    {
      "before": ["<leader>", "q"],
      "after": [],
      "commands": [
        {
          "command": "workbench.action.closeAllGroups",
          "args": []
        }
      ]
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": ["<C-l>"],
      "after": ["w"]
    },
    {
      "before": ["<C-h>"],
      "after": ["b"]
    },
    {
      "before": ["<C-k>"],
      "after": ["4", "k"]
    },
    {
      "before": ["<C-j>"],
      "after": ["4", "j"]
    }
  ],
  "vim.leader": ",",
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false,
    "<C-b>": false,
    "<Alt-a>": false,
    "<C-a><C-w>": false
  },
  "[html]": {
    "editor.defaultFormatter": "mblode.twig-language"
  },
  "explorer.confirmDelete": false,
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.formatOnSave": true,
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "git.enableSmartCommit": true,
  "codesnap.transparentBackground": true,
  "codesnap.boxShadow": "rgba(0, 0, 0, 0.55) 0px 0px 12px",
  "cSpell.language": "en,fr",
  "cSpell.enabled": false,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "git.confirmSync": false,
  "githubPullRequests.remotes": ["origin", "upstream", "gitorigin"],
  "github.gitAuthentication": true,
  "githubPullRequests.logLevel": "debug",
  "workbench.activityBar.visible": false,
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.shellIntegration.enabled": true,
  "terminal.external.linuxExec": "zsh",
  "terminal.external.osxExec": "zsh",
  "workbench.iconTheme": "Monokai Pro (Filter Machine) Icons",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "advancedNewFile.exclude": {
    "node_modules": true,
    "node_modules_electron": true,
    "dev": true,
    "dist": true
  },
  "advancedNewFile.showInformationMessages": true,
  "advancedNewFile.convenienceOptions": ["last", "current", "root"]
}
