{
  "window.menuBarVisibility": "toggle",
  "workbench.colorTheme": "One Dark Pro Darker",
  "workbench.startupEditor": "none",
  "editor.fontFamily": "'Menlo', 'FiraCode Nerd Font', 'Droid Sans Mono', 'monospace', monospace",
  "breadcrumbs.enabled": false,
  "workbench.editor.showTabs": false,
  "security.workspace.trust.untrustedFiles": "open",
  "editor.minimap.enabled": false,
  // Vim configuration
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.insertModeKeyBindings": [],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<C-l>"],
      "after": ["w"]
    },
    {
      "before": ["<C-h>"],
      "after": ["b"]
    },
    {
      "before": ["<C-k>"],
      "after": ["4", "k"]
    },
    {
      "before": ["<C-j>"],
      "after": ["4", "j"]
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": ["<C-l>"],
      "after": ["w"]
    },
    {
      "before": ["<C-h>"],
      "after": ["b"]
    },
    {
      "before": ["<C-k>"],
      "after": ["4", "k"]
    },
    {
      "before": ["<C-j>"],
      "after": ["4", "j"]
    }
  ],
  "vim.leader": ",",
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false,
    "<C-b>": false,
    "<Alt-a>": false,
    "<C-a><C-w>": false
  },
  "[html]": {
    "editor.defaultFormatter": "mblode.twig-language"
  },
  "explorer.confirmDelete": false,
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.formatOnSave": true,
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "git.enableSmartCommit": true,
  "codesnap.transparentBackground": true,
  "codesnap.boxShadow": "rgba(0, 0, 0, 0.55) 0px 0px 12px",
  "cSpell.language": "en,fr",
  "cSpell.enabled": false,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "git.confirmSync": false,
  "githubPullRequests.remotes": ["origin", "upstream", "gitorigin"],
  "github.gitAuthentication": true,
  "githubPullRequests.logLevel": "debug",
  "window.zoomLevel": 2,
  "workbench.activityBar.visible": false
}
